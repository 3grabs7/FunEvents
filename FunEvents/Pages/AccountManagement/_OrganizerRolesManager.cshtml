@model FunEvents.Pages.AccountManagement.RolesManagerModel
@{
    string[] managersRoleManager = new string[] { "OrganizerManager", "OrganizerAssistant" }; // organizerAssistant behövs inte gär
}

<h1>User Manager - Organizer version</h1>
<h4>Assign roles to users</h4>
<ul class="list-group">
    @foreach (var user in Model.Users)
    {
        <li class="list-group-item @(Model.IsInSpecificRole(user.Id, "OrganizerManager").Result ? "active" : "")">
            <div class="row">
                <div class="col text-left">
                    @user.UserName @(Model.IsInSpecificRole(user.Id, "Admin").Result ? "(Admin👸)" : "")
                </div>
                <div class="col-4 text-right">
                    @foreach (var role in managersRoleManager)
                    {
                        <div class="col">
                            @if (Model.IsInSpecificRole(user.Id, role).Result)
                            {
                                <form method="post" asp-route-id="@user.Id" asp-route-role="@role" asp-page-handler="Remove">
                                    <button class="btn btn-block btn-danger"
                                            type="submit">
                                        @($"Remove as {role}")
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-route-id="@user.Id" asp-route-role="@role" asp-page-handler="Add">
                                    <button class="btn btn-block btn-success" type="submit">
                                        @($"Make {role}")
                                    </button>
                                </form>
                            }
                        </div>
                    }
                </div>
            </div>
        </li>
    }
</ul>