@page
@model FunEvents.Pages.AccountManagement.RolesModel
@{
}

<h1>Roles</h1>

<ul>
    @foreach (var role in Model.Roles)
    {
        <li>
            @role.Name
            <form method="post" asp-page-handler="Remove" asp-route-id="@role.Id">
                <button type="submit">🗑</button>
            </form>
        </li>
    }
</ul>

<h4>Add New Role</h4>
<form method="post" asp-page-handler="Create">
    <div class="form-group">
        <label asp-for="NewRole.Name" class="control-label"></label>
        <input asp-for="NewRole.Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>