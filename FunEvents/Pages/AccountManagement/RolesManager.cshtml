@page
@model FunEvents.Pages.AccountManagement.RolesManagerModel
@{
}

@if (User.IsInRole("Admin"))
{
    <h1>User Manager</h1>
    <h4>Assign Organizer Privileges To User</h4>
    <ul class="list-group">
        @foreach (var user in Model.Users)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col text-left">
                        @user.UserName @(Model.IsInSpecificRole(user.Id, "Admin").Result ? "(Admin👸)" : "")
                    </div>
                    <div class="col-8 text-right">
                        <div class="row">
                            @foreach (var role in Model.Roles)
                            {
                                <div class="col">
                                    @if (Model.IsInSpecificRole(user.Id, role.Name).Result)
                                    {
                                        <form method="post" asp-route-id="@user.Id" asp-route-role="@role.Name" asp-page-handler="Remove">
                                            <button class="btn btn-block btn-danger"
                                                    type="submit">
                                                @($"Remove as {role.Name}")
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-route-id="@user.Id" asp-route-role="@role.Name" asp-page-handler="Add">
                                            <button class="btn btn-block btn-success" type="submit">
                                                @($"Make {role.Name}")
                                            </button>
                                        </form>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
}
else if (User.IsInRole("Organizer"))
{
    <partial name="_OrganizerRolesManager" />
}

