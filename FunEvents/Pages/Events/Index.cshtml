@page "{currentpage=1}/{sortby=Id}"
@model FunEvents.Pages.Events.IndexModel
@{
}

<h1>Events Osv</h1>
<div class="row">
    <p class="col-2 p-0 text-right">
        <b>Order By:</b>
    </p>
    <div class="col-3 p-0">
        <a asp-page="Index" class="sort-link col p-0" asp-route-sortby="Title">
            @Html.DisplayNameFor(model => model.Events[0].Title)
        </a>
        <a asp-page="Index" class="sort-link col p-0" asp-route-sortby="Date">
            @Html.DisplayNameFor(model => model.Events[0].Date)
        </a>
        <a asp-page="Index" class="sort-link col p-0" asp-route-sortby="Place">
            @Html.DisplayNameFor(model => model.Events[0].Place)
        </a>
        <a asp-page="Index" class="sort-link col p-0" asp-route-sortby="SpotsAvailable">
            @Html.DisplayNameFor(model => model.Events[0].SpotsAvailable)
        </a>
    </div>
</div>
<div class="row">
    @foreach (var item in Model.Events)
    {
        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@Model.CondenseDescription(item.Description)</p>
                    @if (item.SpotsAvailable == 0)
                    {
                        <p class="card-text alert alert-danger">
                            All spots booked!
                        </p>
                    }
                    else if (item.SpotsAvailable != 0 && item.SpotsAvailable < 10)
                    {
                        <p class="card-text alert alert-warning">
                            Only a few spots left!
                        </p>
                    }
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Read More🐱‍🐉</a>
                </div>
            </div>
        </div>
    }
</div>

    <div>
        @foreach (var item in Model.Events)
        {
            <div class="accordion">
                <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                <div class="panel">
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    <p>@Html.DisplayFor(modelItem => item.Place)</p>
                    <p>@Html.DisplayFor(modelItem => item.Date)</p>
                    @if (item.Attendees?.Contains(Model.ActiveUser) ?? false)
                    {
                        <a class="btn btn-primary disabled">Already Joined 👺</a>
                    }
                    else
                    {
                        <div class="row">
                            @if (item.SpotsAvailable == 0)
                            {
                                <div class="col-3">
                                    <a class="btn btn-primary disabled">Fully booked 😢</a>
                                </div>
                                <div class="col-9">
                                    <div class="alert alert-danger">
                                        All spots booked!
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-3">
                                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">JOIN 🐱‍🐉</a>
                                </div>
                                @if (item.SpotsAvailable < 10)
                                {
                                    <div class="col-9">
                                        <div class="alert alert-warning">
                                            Only a few spots left!
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    <div>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a asp-page="./Index" asp-all-route-data="@(new Dictionary<string, string>
               {{ "currentpage", i.ToString() }, { "sortby", Model.SortBy }})"
                       class="page-link">@i</a>
                </li>
            }
        </ul>
    </div>

