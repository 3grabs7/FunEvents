@page "{currentpage=1}/{sortby=Id}"
@model FunEvents.Pages.Events.IndexModel
@{
}

<div>
    @foreach (var item in Model.Events)
    {
    <div class="accordion"><h3>@Html.DisplayFor(modelItem => item.Title)</h3>
    <div class="panel">
        <p>@Html.DisplayFor(modelItem => item.Description)</p>
        <p>@Html.DisplayFor(modelItem => item.Place)</p>
        <p>@Html.DisplayFor(modelItem => item.Date)</p>
        <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">JOIN</a>
    </div>
    </div>
    }
    </div>
<div>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="./Index" asp-all-route-data="@(new Dictionary<string, string>
               {{ "currentpage", i.ToString() }, { "sortby", Model.SortBy }})"
                   class="page-link">@i</a>
            </li>
        }
    </ul>
</div>

