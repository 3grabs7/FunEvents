@page
@model FunEvents.Pages.Events.EditTemplateModel

@{
    ViewData["Title"] = "EditTemplate";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>EditTemplate</h1>
<h4>Event</h4>
<hr />
@for (int i = 0; i < Model.Events.Count; i++)
{
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Events[i].Id" />
                <div class="form-group">
                    <label asp-for="Events[i].Title" class="control-label"></label>
                    <input asp-for="Events[i].Title" class="form-control" />
                    <span asp-validation-for="Events[i].Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Events[i].Description" class="control-label"></label>
                    <input asp-for="Events[i].Description" class="form-control" />
                    <span asp-validation-for="Events[i].Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Events[i].Place" class="control-label"></label>
                    <input asp-for="Events[i].Place" class="form-control" />
                    <span asp-validation-for="Events[i].Place" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Events[i].Address" class="control-label"></label>
                    <input asp-for="Events[i].Address" class="form-control" />
                    <span asp-validation-for="Events[i].Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Events[i].Date" class="control-label"></label>
                    <input asp-for="Events[i].Date" class="form-control" />
                    <span asp-validation-for="Events[i].Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Events[i].SpotsAvailable" class="control-label"></label>
                    <input asp-for="Events[i].SpotsAvailable" class="form-control" />
                    <span asp-validation-for="Events[i].SpotsAvailable" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
}
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
