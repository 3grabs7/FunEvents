@page
@model FunEvents.Pages.Events.EditEventModel
@{
}

    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th>
                    Date
                </th>
                <th>
                    Place
                </th>
                <th>
                    Adress
                </th>
                <th>
                    Spots Available
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Events)
            {
                
                    <tr>
                        <td>
                            <input asp-for="@item.Title" class="form-control" />
                            <span asp-validation-for="@item.Title" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="@item.Description" class="form-control" />
                            <span asp-validation-for="@item.Description" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="@item.Date" class="form-control" />
                            <span asp-validation-for="@item.Date" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="@item.Place" class="form-control" />
                            <span asp-validation-for="@item.Place" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="@item.Address" class="form-control" />
                            <span asp-validation-for="@item.Address" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="@item.SpotsAvailable" class="form-control" />
                            <span asp-validation-for="@item.SpotsAvailable" class="text-danger"></span>
                        </td>
                        <td>
                            <form method="post">
                                <input type="submit" value="Save" class="btn btn-success" asp-route-id="@item.Id" />
                            </form>
                        </td>
                        <td>
                        <div class="btn btn-danger">Cancel Event</div>
                        </td>
                    </tr>
            
                    }

            </tbody>
    </table>
