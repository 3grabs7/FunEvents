@page
@model FunEvents.Pages.Events.CreateEventModel
@{
}

<div class="row h-100 justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Create New Event</h1>
                <p class="lead">Create an event for your organization!</p>
                <hr />
            </div>
        </div>
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.NewEvent.Organization" class="col-sm-10 col-form-label col-form-label-lg" style="font-weight: bold;"></label>
                <select name="organization">
                    @foreach (var organization in Model.OrganizationsWhereUserIsManager)
                    {
                        <option value="@organization.Id">@organization.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewEvent.Title" class="col-sm-10 col-form-label col-form-label-lg" style="font-weight: bold;"></label>
                <input asp-for="@Model.NewEvent.Title" class="form-control form-control-lg">
                <span asp-validation-for="@Model.NewEvent.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewEvent.Description" class="col-sm-10 col-form-label col-form-label-lg" style="font-weight: bold;">Description</label>
                <textarea asp-for="@Model.NewEvent.Description" class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                <span asp-validation-for="@Model.NewEvent.Description" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="@Model.NewEvent.Date" class="col-sm-10 col-form-label col-form-label-lg" style="font-weight: bold;"></label>
                    <input asp-for="@Model.NewEvent.Date" class="form-control">
                    <span asp-validation-for="@Model.NewEvent.Date" id="basic-addon2"></span>
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="@Model.NewEvent.Place" class="col-sm-10 col-form-label col-form-label-lg" style="font-weight: bold;"></label>
                    <input asp-for="@Model.NewEvent.Place" class="form-control">
                    <span asp-validation-for="@Model.NewEvent.Place" id="basic-addon2"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label asp-for="@Model.NewEvent.Address" class="col-sm-10 col-form-label col-form-label-lg" style="font-weight: bold;"></label>
                    <input asp-for="@Model.NewEvent.Address" class="form-control">
                    <span asp-validation-for="@Model.NewEvent.Address" id="basic-addon2"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@Model.NewEvent.SpotsAvailable" class="col-sm-10 col-form-label col-form-label-lg" style="font-weight: bold;"></label>
                    <input asp-for="@Model.NewEvent.SpotsAvailable" class="form-control">
                    <span asp-validation-for="@Model.NewEvent.SpotsAvailable" id="basic-addon2"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
